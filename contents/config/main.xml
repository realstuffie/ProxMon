<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0">
    <kcfgfile name="plasma-org.kde.plasma.proxmox"/>
    <group name="General">
        <!-- Connection Settings -->
        <entry name="proxmoxHost" type="String">
            <default></default>
        </entry>
        <entry name="proxmoxPort" type="Int">
            <default>8006</default>
        </entry>
        <entry name="apiTokenId" type="String">
            <default></default>
        </entry>
        <entry name="apiTokenSecret" type="String">
            <default></default>
        </entry>
        <entry name="refreshInterval" type="Int">
            <default>30</default>
        </entry>
        <entry name="ignoreSsl" type="Bool">
            <default>true</default>
        </entry>

        <!-- Behavior Settings -->
        <entry name="defaultSorting" type="String">
            <default>status</default>
        </entry>

        <!-- Notification Settings -->
        <entry name="enableNotifications" type="Bool">
            <default>true</default>
        </entry>
        <entry name="notifyMode" type="String">
            <default>all</default>
        </entry>
        <entry name="notifyFilter" type="String">
            <default></default>
        </entry>
        <entry name="notifyOnStart" type="Bool">
            <default>true</default>
        </entry>
        <entry name="notifyOnStop" type="Bool">
            <default>true</default>
        </entry>
        <entry name="notifyOnNodeChange" type="Bool">
            <default>true</default>
        </entry>
    </group>
</kcfg>
