<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0">
    <kcfgfile name="plasma-org.kde.plasma.proxmox"/>
    <group name="General">
        <!-- Connection Settings -->
        <entry name="proxmoxHost" type="String">
            <default></default>
        </entry>
        <entry name="proxmoxPort" type="Int">
            <default>8006</default>
        </entry>
        <entry name="apiTokenId" type="String">
            <default></default>
        </entry>
        <entry name="apiTokenSecret" type="String">
            <default></default>
        </entry>
        <entry name="refreshInterval" type="Int">
            <default>30</default>
        </entry>
        <entry name="ignoreSsl" type="Bool">
            <default>true</default>
        </entry>

        <!-- Connection Mode -->
        <entry name="connectionMode" type="String">
            <default>single</default>
        </entry>
        <!-- JSON array: [{name,host,port,tokenId}] (secrets stored in keyring) -->
        <entry name="multiHostsJson" type="String">
            <default>[]</default>
        </entry>
        <!-- Temporary plaintext stash written by KCM "Update Keyring" buttons.
             Runtime migrates these into keyring and clears this map. -->
        <entry name="multiHostSecretsJson" type="String">
            <default>{}</default>
        </entry>

        <!-- Behavior Settings -->
        <entry name="defaultSorting" type="String">
            <default>status</default>
        </entry>
        <entry name="compactMode" type="String">
            <default>cpu</default>
        </entry>

        <!-- Notification Settings -->
        <entry name="enableNotifications" type="Bool">
            <default>true</default>
        </entry>
        <entry name="notifyMode" type="String">
            <default>all</default>
        </entry>
        <entry name="notifyFilter" type="String">
            <default></default>
        </entry>
        <entry name="notifyOnStart" type="Bool">
            <default>true</default>
        </entry>
        <entry name="notifyOnStop" type="Bool">
            <default>true</default>
        </entry>
        <entry name="notifyOnNodeChange" type="Bool">
            <default>true</default>
        </entry>

        <!-- Notification rate limiting -->
        <entry name="notifyRateLimitEnabled" type="Bool">
            <default>true</default>
        </entry>
        <entry name="notifyRateLimitSeconds" type="Int">
            <default>120</default>
        </entry>

        <!-- Notification privacy -->
        <entry name="redactNotifyIdentities" type="Bool">
            <default>true</default>
        </entry>

        <!-- Auto-retry / exponential backoff -->
        <entry name="autoRetry" type="Bool">
            <default>true</default>
        </entry>
        <entry name="retryStartSeconds" type="Int">
            <default>5</default>
        </entry>
        <entry name="retryMaxSeconds" type="Int">
            <default>300</default>
        </entry>
    </group>
</kcfg>
